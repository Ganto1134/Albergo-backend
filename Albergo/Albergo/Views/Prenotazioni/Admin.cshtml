@model IEnumerable<Prenotazione>

@{
    ViewData["Title"] = "Admin - Prenotazioni";
}

<h1>Prenotazioni</h1>

<form method="get">
    <div class="form-group">
        <label for="codiceFiscale">Cerca per Codice Fiscale:</label>
        <input type="text" name="codiceFiscale" id="codiceFiscale" class="form-control" placeholder="Inserisci codice fiscale">
    </div>
    <button type="submit" class="btn btn-primary">Cerca</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Codice Fiscale Cliente</th>
            <th>Numero Camera</th>
            <th>Data Prenotazione</th>
            <th>Numero Progressivo Anno</th>
            <th>Anno</th>
            <th>Periodo</th>
            <th>Caparra</th>
            <th>Tariffa</th>
            <th>Tipo Soggiorno</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prenotazione in Model)
        {
            <tr>
                <td>@prenotazione.ID</td>
                <td>@prenotazione.CodiceFiscaleCliente</td>
                <td>@prenotazione.NumeroCamera</td>
                <td>@prenotazione.DataPrenotazione.ToString("dd/MM/yyyy")</td>
                <td>@prenotazione.NumeroProgressivoAnno</td>
                <td>@prenotazione.Anno</td>
                <td>@prenotazione.Dal.ToString("dd/MM/yyyy") - @prenotazione.Al.ToString("dd/MM/yyyy")</td>
                <td>@prenotazione.CaparraConfirmatoria.ToString("C")</td>
                <td>@prenotazione.TariffaApplicata.ToString("C")</td>
                <td>@prenotazione.TipoSoggiorno</td>
            </tr>
        }
    </tbody>
</table>